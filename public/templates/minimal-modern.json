{
    "name": "Modern",
    "version": 1,
    "pageSize": "A4",
    "orientation": "portrait",
    "enablePageNumbers": true,
    "fonts": {
        "family": "Open Sans",
        "fallback": "Helvetica, Arial, sans-serif",
        "baseSize": 10
    },
    "spacing": {
        "unit": 4,
        "sectionGap": 2,
        "itemGap": 1,
        "pagePadding": {
            "top": 30,
            "right": 30,
            "bottom": 30,
            "left": 30
        }
    },
    "classDefs": {
        "text-muted": {
            "color": "#666"
        },
        "h1": {
            "fontSize": 24,
            "fontWeight": "bold"
        },
        "h2": {
            "fontSize": 18,
            "fontWeight": "bold"
        },
        "h3": {
            "fontSize": 16,
            "fontWeight": "bold"
        },
        "h4": {
            "fontSize": 14,
            "fontWeight": "bold"
        },
        "h5": {
            "fontSize": 12,
            "fontWeight": "bold"
        },
        "h6": {
            "fontSize": 10,
            "fontWeight": "bold"
        },
        "p": {
            "fontSize": 10,
            "fontWeight": "normal"
        },
        "header-container": {
            "display": "flex",
            "flexDirection": "column",
            "paddingBottom": 15,
            "borderBottom": "1pt solid #cccccc"
        },
        "header-name": {
            "fontSize": 28,
            "fontWeight": "bold",
            "letterSpacing": 2,
            "textAlign": "center"
        },
        "header-title": {
            "fontSize": 14,
            "color": "#333",
            "textAlign": "center",
            "paddingBottom": 10,
            "paddingTop": 5
        },
        "header-website": {
            "fontSize": 10,
            "color": "#333",
            "textAlign": "center"
        },
        "section-container": {
            "display": "flex",
            "flexDirection": "row",
            "marginTop": 10,
            "marginBottom": 5
        },
        "section-icon": {
            "width": 25,
            "marginRight": 8
        },
        "section-title": {
            "fontSize": 14,
            "fontWeight": "bold",
            "paddingBottom": 5,
            "borderBottom": "1pt solid #cccccc",
            "width": "100%"
        },
        "contact-info-container": {
            "display": "flex",
            "flexDirection": "column",
            "paddingBottom": 5
        },
        "contact-item": {
            "display": "flex",
            "flexDirection": "row",
            "paddingBottom": 2
        },
        "contact-label": {
            "fontSize": 10,
            "fontWeight": "bold",
            "paddingRight": 5
        },
        "contact-value": {
            "fontSize": 10
        },
        "experience-container": {
            "display": "flex",
            "flexDirection": "column",
            "paddingBottom": 5
        },
        "job-title": {
            "fontSize": 12,
            "fontWeight": "bold",
            "paddingTop": 8
        },
        "job-company": {
            "fontSize": 10,
            "fontWeight": "bold"
        },
        "job-period": {
            "fontSize": 10,
            "color": "#666"
        },
        "job-details": {
            "display": "flex",
            "flexDirection": "column",
            "paddingTop": 3
        },
        "bullet-point": {
            "display": "flex",
            "flexDirection": "row",
            "gap": 2,
            "paddingBottom": 2
        },
        "education-container": {
            "display": "flex",
            "flexDirection": "column",
            "gap": 8
        },
        "education-details": {
            "display": "flex",
            "flexDirection": "column",
            "gap": 2
        },
        "education-degree": {
            "fontSize": 12,
            "fontWeight": "bold"
        },
        "education-institution": {
            "fontSize": 10,
            "fontWeight": "bold"
        },
        "education-period": {
            "fontSize": 10,
            "color": "#666"
        },
        "skills-row": {
            "display": "flex",
            "flexDirection": "row",
            "paddingBottom": 5
        },
        "skill-name": {
            "fontSize": 10,
            "fontWeight": "bold",
            "width": 80
        },
        "skill-dots": {
            "display": "flex",
            "flexDirection": "row",
            "gap": 5
        },
        "references-container": {
            "display": "flex",
            "flexDirection": "column",
            "paddingBottom": 5
        },
        "reference-details": {
            "display": "flex",
            "flexDirection": "column",
            "gap": 2,
            "width": "50%"
        },
        "reference-name": {
            "fontSize": 12,
            "fontWeight": "bold"
        },
        "reference-title": {
            "fontSize": 10
        },
        "reference-contact": {
            "fontSize": 10,
            "color": "#666"
        },
        "references-row": {
            "display": "flex",
            "flexDirection": "row",
            "gap": 20,
            "paddingTop": 5,
            "flexWrap": "wrap"
        }
    },
    "elements": [
        {
            "type": "View",
            "class": "header-container",
            "elements": [
                {
                    "type": "Text",
                    "render": "$r.contactInfo.firstName + ' ' + $r.contactInfo.lastName",
                    "class": "header-name"
                },
                {
                    "type": "Text",
                    "path": "$.titles[?(@.enabled==true)].content",
                    "class": "header-title"
                },
                {
                    "type": "Text",
                    "path": "contactInfo.website",
                    "class": "header-website"
                }
            ]
        },
        {
            "type": "View",
            "style": {
                "display": "flex",
                "flexDirection": "row",
                "gap": 20,
                "paddingTop": 10
            },
            "elements": [
                {
                    "type": "View",
                    "style": {
                        "width": "35%",
                        "paddingRight": 10
                    },
                    "elements": [
                        {
                            "type": "View",
                            "class": "section-container",
                            "elements": [
                                {
                                    "type": "Text",
                                    "data": "ABOUT ME",
                                    "class": "section-title"
                                }
                            ]
                        },
                        {
                            "type": "View",
                            "style": {
                                "paddingTop": 5,
                                "paddingBottom": 15
                            },
                            "path": "$.summaries[?(@.enabled==true)]",
                            "elements": [
                                {
                                    "type": "Text",
                                    "path": "content",
                                    "class": "p"
                                }
                            ]
                        },
                        {
                            "type": "View",
                            "class": "section-container",
                            "elements": [
                                {
                                    "type": "Text",
                                    "data": "CONTACT",
                                    "class": "section-title"
                                }
                            ]
                        },
                        {
                            "type": "View",
                            "class": "contact-info-container",
                            "elements": [
                                {
                                    "type": "View",
                                    "class": "contact-item",
                                    "hide": "!$r.contactInfo.address",
                                    "elements": [
                                        {
                                            "type": "Text",
                                            "data": "Address:",
                                            "class": "contact-label"
                                        },
                                        {
                                            "type": "Text",
                                            "render": "$r.contactInfo.address + ($r.contactInfo.country ? ' ' + $r.contactInfo.country : '')",
                                            "class": "contact-value"
                                        }
                                    ]
                                },
                                {
                                    "type": "View",
                                    "class": "contact-item",
                                    "hide": "!$r.contactInfo.phone",
                                    "elements": [
                                        {
                                            "type": "Text",
                                            "data": "Mobile:",
                                            "class": "contact-label"
                                        },
                                        {
                                            "type": "Text",
                                            "path": "contactInfo.phone",
                                            "class": "contact-value"
                                        }
                                    ]
                                },
                                {
                                    "type": "View",
                                    "class": "contact-item",
                                    "hide": "!$r.contactInfo.email",
                                    "elements": [
                                        {
                                            "type": "Text",
                                            "data": "Email:",
                                            "class": "contact-label"
                                        },
                                        {
                                            "type": "Text",
                                            "path": "contactInfo.email",
                                            "class": "contact-value"
                                        }
                                    ]
                                },
                                {
                                    "type": "View",
                                    "class": "contact-item",
                                    "hide": "!$r.contactInfo.website",
                                    "elements": [
                                        {
                                            "type": "Text",
                                            "data": "Website:",
                                            "class": "contact-label"
                                        },
                                        {
                                            "type": "Text",
                                            "path": "contactInfo.website",
                                            "class": "contact-value"
                                        }
                                    ]
                                },
                                {
                                    "type": "View",
                                    "class": "contact-item",
                                    "hide": "true",
                                    "elements": [
                                        {
                                            "type": "Text",
                                            "data": "Skype:",
                                            "class": "contact-label"
                                        },
                                        {
                                            "type": "Text",
                                            "data": "username",
                                            "class": "contact-value"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "View",
                            "class": "section-container",
                            "elements": [
                                {
                                    "type": "Text",
                                    "data": "SKILLS",
                                    "class": "section-title"
                                }
                            ]
                        },
                        {
                            "type": "View",
                            "style": {
                                "paddingTop": 5
                            },
                            "elements": [
                                {
                                    "type": "View",
                                    "path": "$.skills[?(@.enabled==true)]",
                                    "class": "skills-section",
                                    "elements": [
                                        {
                                            "type": "Text",
                                            "render": "join(p('skills[?(@.enabled==true)].content'), ', ')",
                                            "class": "p"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "View",
                    "style": {
                        "width": "65%"
                    },
                    "elements": [
                        {
                            "type": "View",
                            "class": "section-container",
                            "elements": [
                                {
                                    "type": "Text",
                                    "data": "EXPERIENCES",
                                    "class": "section-title"
                                }
                            ]
                        },
                        {
                            "type": "View",
                            "class": "experience-container",
                            "path": "$.experiences[?(@.enabled==true)]",
                            "elements": [
                                {
                                    "type": "Text",
                                    "path": "role",
                                    "class": "job-title"
                                },
                                {
                                    "type": "View",
                                    "style": {
                                        "display": "flex",
                                        "flexDirection": "row",
                                        "justifyContent": "space-between"
                                    },
                                    "elements": [
                                        {
                                            "type": "Text",
                                            "path": "companyName",
                                            "class": "job-company"
                                        },
                                        {
                                            "type": "Text",
                                            "render": "renderDates([$item.startDate, $item.endDate])",
                                            "class": "job-period"
                                        }
                                    ]
                                },
                                {
                                    "type": "View",
                                    "class": "job-details",
                                    "path": "items[?(@.enabled==true)]",
                                    "elements": [
                                        {
                                            "type": "View",
                                            "style": {
                                                "display": "flex",
                                                "flexDirection": "column"
                                            },
                                            "path": "variations[?(@.enabled==true)]",
                                            "elements": [
                                                {
                                                    "type": "View",
                                                    "class": "bullet-point",
                                                    "wrap": false,
                                                    "break": false,
                                                    "elements": [
                                                        {
                                                            "type": "Text",
                                                            "data": "• ",
                                                            "style": {
                                                                "marginLeft": 8
                                                            }
                                                        },
                                                        {
                                                            "type": "Text",
                                                            "path": "content",
                                                            "class": "p"
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "View",
                            "class": "section-container",
                            "elements": [
                                {
                                    "type": "Text",
                                    "data": "EDUCATION",
                                    "class": "section-title"
                                }
                            ]
                        },
                        {
                            "type": "View",
                            "class": "education-container",
                            "path": "$.educations[?(@.enabled==true)]",
                            "elements": [
                                {
                                    "type": "View",
                                    "class": "education-details",
                                    "elements": [
                                        {
                                            "type": "Text",
                                            "path": "institution",
                                            "class": "education-institution"
                                        },
                                        {
                                            "type": "View",
                                            "style": {
                                                "display": "flex",
                                                "flexDirection": "row",
                                                "justifyContent": "space-between"
                                            },
                                            "elements": [
                                                {
                                                    "type": "Text",
                                                    "path": "degree",
                                                    "class": "education-degree"
                                                },
                                                {
                                                    "type": "Text",
                                                    "render": "renderDates([$item.startDate, $item.endDate])",
                                                    "class": "education-period"
                                                }
                                            ]
                                        },
                                        {
                                            "type": "Text",
                                            "path": "content",
                                            "class": "p"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "View",
                            "class": "section-container",
                            "hide": "p('$.references[?(@.enabled==true)]').length==0",
                            "elements": [
                                {
                                    "type": "Text",
                                    "data": "REFERENCE",
                                    "class": "section-title"
                                }
                            ]
                        },
                        {
                            "type": "View",
                            "class": "references-container",
                            "elements": [
                                {
                                    "type": "View",
                                    "class": "references-row",
                                    "path": "$.references[?(@.enabled==true)]",
                                    "elements": [
                                        {
                                            "type": "View",
                                            "class": "reference-details",
                                            "elements": [
                                                {
                                                    "type": "Text",
                                                    "path": "name",
                                                    "class": "reference-name"
                                                },
                                                {
                                                    "type": "Text",
                                                    "render": "join([$item.title, $item.company], ', ')",
                                                    "class": "reference-title"
                                                },
                                                {
                                                    "type": "Text",
                                                    "render": "join(['Phone: ' + $item.phone, 'Email: ' + $item.email], '\\n')",
                                                    "class": "reference-contact"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ] 
}